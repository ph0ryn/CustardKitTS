{
  "name": "custardkit-ts",
  "version": "0.2.4",
  "repository": {
    "type": "git",
    "url": "https://github.com/ph0ryn/CustardKitTS.git"
  },
  "license": "MIT",
  "author": "ph0ryn",
  "type": "module",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "format": "pnpm run lint --fix . ; oxfmt . ; eslint --fix .",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "git config core.hooksPath .githooks",
    "lint": "oxlint --type-aware",
    "prepack": "pnpm run precommit && pnpm run build && clean-pkg-json",
    "precommit": "pnpm test && pnpm run typecheck && pnpm run format",
    "test": "jest",
    "typecheck": "tsgo -p . --noEmit"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "pnpm run precommit"
    ],
    "*.{js,mjs}": [
      "pnpm run format"
    ],
    "*.{json,jsonc}": [
      "pnpm oxfmt ."
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "devDependencies": {
    "@jest/globals": "catalog:",
    "@stylistic/eslint-plugin": "catalog:",
    "@types/jest": "catalog:",
    "@types/node": "catalog:",
    "@typescript/native-preview": "catalog:",
    "clean-pkg-json": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-import-x": "catalog:",
    "eslint-plugin-oxlint": "catalog:",
    "jest": "catalog:",
    "lint-staged": "catalog:",
    "oxfmt": "catalog:",
    "oxlint": "catalog:",
    "oxlint-tsgolint": "catalog:",
    "sort-package-json": "catalog:",
    "ts-jest": "catalog:",
    "tsdown": "catalog:",
    "typescript-eslint": "catalog:"
  },
  "peerDependencies": {
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.28.0",
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.mts",
        "import": "./dist/index.mjs"
      },
      "./Actions": {
        "types": "./dist/Actions/index.d.mts",
        "import": "./dist/Actions/index.mjs"
      },
      "./Labels": {
        "types": "./dist/Labels/index.d.mts",
        "import": "./dist/Labels/index.mjs"
      },
      "./Keys": {
        "types": "./dist/Keys/index.d.mts",
        "import": "./dist/Keys/index.mjs"
      },
      "./Layout": {
        "types": "./dist/Layout/index.d.mts",
        "import": "./dist/Layout/index.mjs"
      }
    }
  }
}
